@model FrenchShopsApp.Models.T_Shop
@{
    ViewData["Title"] = "Add";
}

<h1>Ajouter un magasin dans la liste</h1>

<form method="post" asp-action="Ajouter">
    <divclass ="border p-3">
        <divclass ="form-group row">
            <h2class ="text-info pl-3">Ajouter un robot</h2>
        </div>
        <divclass ="form-group row">
            <divclass ="col-4">
                <labelasp-for ="Nom"></label><!--le tag-helper permet d'utiliser un champ du modèle-->
            </div>
            <divclass ="col-8">
                <inputasp-for ="Nom" class="form-control" />
            </div>
        </div>
        <divclass ="form-group row">
            <divclass ="col-4">
                <labelasp-for ="Lienversphoto"></label>
            </div>
            <divclass ="col-8">
                <inputasp-for ="Lienversphoto" class="form-control" />
            </div>
        </div>
        <divclass ="form-group row">
            <divclass ="col-8 offset-4 row">
                <divclass ="col">
                    <inputtype ="submit" class="btn btn-info w-100" value="Enregistrer" />
                </div>
            </div>
        </div>
    </div>
</form>
